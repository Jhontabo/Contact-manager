<?xml version="1.0" encoding="UTF-8"?>
<web-app 
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                        http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">

    <!-- Nombre de la aplicación -->
    <display-name>ContactManager</display-name>

    <!-- Declaración del servlet controlador -->
    <servlet>
        <servlet-name>ContactController</servlet-name>
        <servlet-class>com.contactmanager.controller.ContactController</servlet-class>
    </servlet>

    <!-- Mapeo de URL al servlet -->
    <servlet-mapping>
        <servlet-name>ContactController</servlet-name>
        <url-pattern>/contacts</url-pattern>
    </servlet-mapping>

    <!-- Página de bienvenida por defecto (puedes crear index.jsp en webapp/) -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>

